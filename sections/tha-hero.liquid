{% comment %}
  THA ASCEND - Hero Section
  Main hero with split layout: content + performance dashboard
{% endcomment %}

<section class="section section-lg relative" style="padding-top: 10rem;">
  <div class="container">
    <div class="grid grid-cols-1" style="grid-template-columns: 1fr; gap: 4rem; align-items: center;">
      
      {%- comment -%} Left: Content {%- endcomment -%}
      <div style="max-width: 100%;">
        
        {%- comment -%} Badge {%- endcomment -%}
        {% if section.settings.show_badge %}
        <div class="badge mb-8">
          <span class="badge-dot"></span>
          {{ section.settings.badge_text | default: 'v2.0 System Available' }}
        </div>
        {% endif %}

        {%- comment -%} Main Headline {%- endcomment -%}
        <h1 class="heading-xl" style="margin-bottom: 2rem;">
          {{ section.settings.headline_line1 | default: 'ECOMMERCE' }}<br>
          {{ section.settings.headline_line2 | default: 'WITHOUT' }}<br>
          <span class="text-gradient">{{ section.settings.headline_line3 | default: 'FRICTION.' }}</span>
        </h1>

        {%- comment -%} Description {%- endcomment -%}
        <p style="font-size: 1.25rem; color: var(--color-muted); font-weight: 300; max-width: 600px; line-height: 1.8; margin-bottom: 2.5rem; border-left: 2px solid var(--color-border); padding-left: 1.5rem;">
          {{ section.settings.description | default: 'Nous construisons des écosystèmes Shopify ultra-performants. Pas de bloatware, pas de code inutile. Juste du revenu pur.' }}
        </p>

        {%- comment -%} CTA Buttons {%- endcomment -%}
        <div style="display: flex; flex-wrap: wrap; gap: 1rem;">
          <a href="{{ section.settings.cta_primary_url }}" class="btn btn-primary">
            {{ section.settings.cta_primary_text | default: 'Auditer ma boutique' }}
          </a>
          <a href="{{ section.settings.cta_secondary_url }}" class="btn btn-secondary" style="display: flex; align-items: center; gap: 0.5rem;">
            {{ section.settings.cta_secondary_text | default: 'Voir les thèmes' }}
            <svg width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="margin-top: 2px;">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </a>
        </div>
      </div>

      {%- comment -%} Right: Performance Dashboard (Desktop only) {%- endcomment -%}
      <div class="hide-mobile" style="position: relative; display: none;">
        <div style="position: absolute; inset: -4px; background: linear-gradient(to right, var(--color-accent), #9333ea); border-radius: 0.75rem; filter: blur(16px); opacity: 0.2;" class="animate-pulse-slow"></div>
        
        <div class="card animate-float" style="position: relative; box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);">
          
          {%- comment -%} Dashboard Header {%- endcomment -%}
          <div style="display: flex; align-items: center; justify-content: space-between; border-bottom: 1px solid var(--color-border); padding-bottom: 1rem; margin-bottom: 1rem;">
            <div style="display: flex; gap: 0.5rem;">
              <div style="width: 12px; height: 12px; border-radius: 50%; background: rgba(239, 68, 68, 0.2); border: 1px solid rgba(239, 68, 68, 0.5);"></div>
              <div style="width: 12px; height: 12px; border-radius: 50%; background: rgba(234, 179, 8, 0.2); border: 1px solid rgba(234, 179, 8, 0.5);"></div>
              <div style="width: 12px; height: 12px; border-radius: 50%; background: rgba(34, 197, 94, 0.2); border: 1px solid rgba(34, 197, 94, 0.5);"></div>
            </div>
            <span class="text-mono" style="color: var(--color-muted);">performance_audit.json</span>
          </div>

          {%- comment -%} Core Web Vitals {%- endcomment -%}
          <div class="grid grid-cols-2 gap-4" style="margin-bottom: 1.5rem;">
            <div style="background: rgba(5, 5, 5, 0.5); padding: 1rem; border-radius: 0.5rem; border: 1px solid var(--color-border);">
              <div class="text-mono" style="color: var(--color-muted); margin-bottom: 0.25rem;">LCP (Loading)</div>
              <div style="font-size: 1.5rem; font-weight: 700; color: var(--color-success);">0.8s</div>
              <div style="width: 100%; height: 4px; background: var(--color-border); margin-top: 0.5rem; border-radius: 9999px; overflow: hidden;">
                <div style="height: 100%; background: var(--color-success); width: 95%;"></div>
              </div>
            </div>
            <div style="background: rgba(5, 5, 5, 0.5); padding: 1rem; border-radius: 0.5rem; border: 1px solid var(--color-border);">
              <div class="text-mono" style="color: var(--color-muted); margin-bottom: 0.25rem;">CLS (Stability)</div>
              <div style="font-size: 1.5rem; font-weight: 700; color: var(--color-success);">0.00</div>
              <div style="width: 100%; height: 4px; background: var(--color-border); margin-top: 0.5rem; border-radius: 9999px; overflow: hidden;">
                <div style="height: 100%; background: var(--color-success); width: 100%;"></div>
              </div>
            </div>
          </div>

          {%- comment -%} Code Block {%- endcomment -%}
          <div class="text-mono" style="font-size: 0.75rem; background: rgba(5, 5, 5, 0.5); padding: 1rem; border-radius: 0.5rem; border: 1px solid var(--color-border); line-height: 1.8;">
            <div style="display: flex; gap: 1rem;">
              <span style="color: var(--color-muted);">1</span>
              <span><span style="color: #c084fc;">class</span> <span style="color: #fef08a;">ShopifyStore</span> {</span>
            </div>
            <div style="display: flex; gap: 1rem;">
              <span style="color: var(--color-muted);">2</span>
              <span style="padding-left: 1rem;">optimization: <span style="color: #4ade80;">'Native Liquid'</span>;</span>
            </div>
            <div style="display: flex; gap: 1rem;">
              <span style="color: var(--color-muted);">3</span>
              <span style="padding-left: 1rem;">apps_count: <span style="color: #fb923c;">0</span>; <span style="color: var(--color-muted);">// No bloatware</span></span>
            </div>
            <div style="display: flex; gap: 1rem;">
              <span style="color: var(--color-muted);">4</span>
              <span style="padding-left: 1rem;">conversion_rate: <span style="color: var(--color-accent);">4.5%</span>;</span>
            </div>
            <div style="display: flex; gap: 1rem;">
              <span style="color: var(--color-muted);">5</span>
              <span>}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @media (min-width: 1024px) {
    .section .grid {
      grid-template-columns: 7fr 5fr !important;
    }
    .hide-mobile {
      display: block !important;
    }
  }
</style>

