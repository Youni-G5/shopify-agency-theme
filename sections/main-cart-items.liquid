<div class="section-modern">
  <div class="container-modern" style="max-width: 1000px;">
    <h1 class="heading-xl" style="margin-bottom: var(--space-8); text-align: center;">Votre Panier</h1>

    {% if cart.item_count > 0 %}
      <form action="{{ routes.cart_url }}" method="post">
        <div class="cart-items" style="margin-bottom: var(--space-8);">
          {% for item in cart.items %}
            <div class="glass-card" style="display: grid; grid-template-columns: 100px 1fr auto; gap: var(--space-6); margin-bottom: var(--space-4); align-items: center;">
              
              {% if item.image %}
                <img 
                  src="{{ item.image | image_url: width: 200 }}" 
                  alt="{{ item.title }}"
                  style="width: 100%; border-radius: var(--radius-lg);"
                >
              {% endif %}

              <div>
                <h3 style="margin-bottom: var(--space-2);">{{ item.product.title }}</h3>
                {% unless item.variant.title contains 'Default' %}
                  <p style="color: var(--color-text-muted); font-size: var(--font-size-sm);">{{ item.variant.title }}</p>
                {% endunless %}
                <p style="font-weight: 700; color: var(--color-primary); margin-top: var(--space-2);">{{ item.price | money }}</p>
              </div>

              <div style="display: flex; align-items: center; gap: var(--space-4);">
                <input 
                  type="number" 
                  name="updates[]" 
                  value="{{ item.quantity }}" 
                  min="0"
                  style="width: 80px; padding: var(--space-2); border: 2px solid var(--glass-border); border-radius: var(--radius-lg); text-align: center;"
                >
                <button type="submit" class="btn btn-secondary" style="padding: var(--space-2) var(--space-4);">Mettre Ã  jour</button>
              </div>
            </div>
          {% endfor %}
        </div>
      </form>
    {% else %}
      <div style="text-align: center; padding: var(--space-16) 0;">
        <p style="font-size: var(--font-size-xl); color: var(--color-text-muted); margin-bottom: var(--space-6);">Votre panier est vide</p>
        <a href="/collections/all" class="btn btn-primary">Continuer mes achats</a>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Cart Items",
  "settings": []
}
{% endschema %}
