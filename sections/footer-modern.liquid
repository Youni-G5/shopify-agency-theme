  "name": "Footer Modern",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Footer Logo"
    },
    {
      "type": "textarea",
      "id": "about_text",
      "label": "About Text",
      "default": "Agence Shopify spécialisée en création de thèmes sur-mesure et optimisation e-commerce."
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Show Newsletter",
      "default": true
    },
    {
