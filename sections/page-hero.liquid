<section class="page-hero section" data-section-id="{{ section.id }}" style="background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%); color: white; padding: 80px 0 60px;">
  <div class="container">
    <div class="page-hero-content" style="text-align: center; max-width: 800px; margin: 0 auto;">
      {% if section.settings.heading != blank %}
        <h1 class="heading-xl fade-in-up" style="color: white; margin-bottom: 1rem;">
          {{ section.settings.heading }}
        </h1>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <p class="hero-subheading fade-in-up" style="font-size: 1.25rem; opacity: 0.95; margin-bottom: 0; line-height: 1.6;">
          {{ section.settings.subheading }}
        </p>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Page Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Page Title"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading"
    }
  ],
  "presets": [
    {
      "name": "Page Hero"
    }
  ]
}
{% endschema %}
