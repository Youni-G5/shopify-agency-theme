<section class="hero-banner section" data-section-id="{{ section.id }}" style="background: linear-gradient(135deg, {{ settings.color_primary }} 0%, {{ settings.color_secondary }} 100%); color: white; padding: 100px 0;">
  <div class="container">
    <div class="hero-content" style="text-align: center; max-width: 800px; margin: 0 auto;">
      {% if section.settings.heading != blank %}
        <h1 class="heading-xl fade-in-up" style="color: white; margin-bottom: 1.5rem;">
          {{ section.settings.heading }}
        </h1>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <p class="hero-subheading fade-in-up" style="font-size: 1.25rem; opacity: 0.95; margin-bottom: 2.5rem; line-height: 1.6;">
          {{ section.settings.subheading }}
        </p>
      {% endif %}

      <div class="hero-buttons fade-in-up" style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_link }}" class="btn" style="background: white; color: var(--color-primary); border-color: white;">
            {{ section.settings.button_text }}
          </a>
        {% endif %}

        {% if section.settings.button_secondary_text != blank %}
          <a href="{{ section.settings.button_secondary_link }}" class="btn btn-secondary" style="background: transparent; color: white; border-color: white;">
            {{ section.settings.button_secondary_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Agency"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "We create amazing Shopify experiences"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Primary Button Text",
      "default": "Get Started"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "button_secondary_text",
      "label": "Secondary Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_secondary_link",
      "label": "Secondary Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
