{% comment %}
  THA ASCEND - Tech Stack Section
  3-column services with icons and features
{% endcomment %}

<section class="section section-lg">
  <div class="container">
    
    {%- comment -%} Section Header {%- endcomment -%}
    <div class="mb-16">
      <h2 class="heading-lg mb-4">{{ section.settings.heading | default: 'NOTRE "TECH STACK"' }}</h2>
      <p class="text-muted" style="max-width: 600px;">
        {{ section.settings.description | default: 'Nous ne sommes pas des graphistes qui "bricolent" du code. Nous sommes des ing√©nieurs qui comprennent le commerce.' }}
      </p>
    </div>

    {%- comment -%} Services Grid {%- endcomment -%}
    <div class="grid grid-cols-3" style="gap: 1.5rem;">
      {% for block in section.blocks %}
        <div class="card" style="padding: 2rem;">
          
          {%- comment -%} Icon {%- endcomment -%}
          <div style="width: 48px; height: 48px; background: var(--color-border); border-radius: 0.5rem; display: flex; align-items: center; justify-content: center; color: white; margin-bottom: 1.5rem; transition: all 0.3s;" class="service-icon">
            {{ block.settings.icon_svg }}
          </div>

          {%- comment -%} Title {%- endcomment -%}
          <h3 class="font-display" style="font-size: 1.25rem; font-weight: 700; margin-bottom: 0.75rem;">{{ block.settings.title }}</h3>

          {%- comment -%} Description {%- endcomment -%}
          <p class="text-muted" style="font-size: 0.875rem; line-height: 1.7; margin-bottom: 1.5rem;">{{ block.settings.description }}</p>

          {%- comment -%} Features List {%- endcomment -%}
          {% if block.settings.feature_1 != blank or block.settings.feature_2 != blank %}
          <ul class="text-mono" style="font-size: 0.75rem; color: var(--color-muted); list-style: none; padding: 0; border-top: 1px solid var(--color-border); padding-top: 1rem;">
            {% if block.settings.feature_1 != blank %}
            <li style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.5rem;">
              <span style="color: var(--color-accent);">></span> {{ block.settings.feature_1 }}
            </li>
            {% endif %}
            {% if block.settings.feature_2 != blank %}
            <li style="display: flex; align-items: center; gap: 0.5rem;">
              <span style="color: var(--color-accent);">></span> {{ block.settings.feature_2 }}
            </li>
            {% endif %}
          </ul>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .card:hover .service-icon {
    background: var(--color-accent);
    transform: scale(1.1);
  }
  
  @media (max-width: 768px) {
    .grid-cols-3 {
      grid-template-columns: 1fr !important;
    }
  }
</style>

{% schema %}
{
  "name": "THA Tech Stack",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "NOTRE \"TECH STACK\""
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ],
  "max_blocks": 3,
  "blocks": [
    {
      "type": "service",
      "name": "Service",
      "settings": [
        {
          "type": "html",
          "id": "icon_svg",
          "label": "Icon SVG (24x24)",
          "default": "<svg width='24' height='24' fill='none' viewBox='0 0 24 24' stroke='currentColor'><path stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10'></path></svg>"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Architecture Liquid"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "feature_1",
          "label": "Feature 1"
        },
        {
          "type": "text",
          "id": "feature_2",
          "label": "Feature 2"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "THA Tech Stack"
    }
  ]
}
{% endschema %}
