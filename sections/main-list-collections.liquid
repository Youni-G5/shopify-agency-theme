<div class="section-modern">
  <div class="container-modern">
    <h1 class="heading-display scroll-reveal" style="text-align: center; margin-bottom: var(--space-16);">Nos Collections</h1>

    <div class="grid-modern" style="grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: var(--space-8);">
      {% for collection in collections %}
        {% unless collection.handle == 'frontpage' %}
          <div class="card hover-lift scroll-reveal" style="padding: 0; overflow: hidden;">
            <a href="{{ collection.url }}" style="text-decoration: none; color: inherit;">
              {% if collection.image %}
                <img 
                  src="{{ collection.image | image_url: width: 600 }}" 
                  alt="{{ collection.title }}"
                  loading="lazy"
                  style="width: 100%; aspect-ratio: 4/3; object-fit: cover;"
                >
              {% else %}
                <div style="width: 100%; aspect-ratio: 4/3; background: var(--gradient-mesh); display: flex; align-items: center; justify-content: center;">
                  <span style="font-size: var(--font-size-2xl); font-weight: 700;">{{ collection.title }}</span>
                </div>
              {% endif %}

              <div style="padding: var(--space-6);">
                <h2 style="font-size: var(--font-size-xl); margin-bottom: var(--space-3);">{{ collection.title }}</h2>
                
                {% if collection.description != blank %}
                  <p style="color: var(--color-text-light); margin-bottom: var(--space-4);">
                    {{ collection.description | strip_html | truncate: 100 }}
                  </p>
                {% endif %}

                <p style="color: var(--color-text-muted); font-size: var(--font-size-sm);">
                  {{ collection.products_count }} produit{% if collection.products_count > 1 %}s{% endif %}
                </p>
              </div>
            </a>
          </div>
        {% endunless %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Collections List",
  "settings": []
}
{% endschema %}
