<div class="page-wrapper section" style="min-height: 60vh;">
  <div class="container">
    <div class="page-content" style="max-width: 900px; margin: 0 auto;">
      <h1 class="heading-lg fade-in-up">{{ page.title }}</h1>
      <div class="rte fade-in-up" style="line-height: 1.8; font-size: 1.05rem;">
        {{ page.content }}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Main Page",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding Top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 60
    }
  ]
}
{% endschema %}
