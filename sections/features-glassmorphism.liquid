{% comment %}
  Features Section - Glassmorphism Cards
{% endcomment %}

<section class="section-modern" style="background: var(--gradient-mesh); background-size: 400% 400%; animation: gradientShift 20s ease infinite;">
  <div class="container-modern">
    <!-- Section Header -->
    <div style="text-align: center; max-width: 800px; margin: 0 auto var(--space-16);">
      {% if section.settings.eyebrow %}
        <p class="scroll-reveal" style="color: var(--color-primary); font-weight: 600; font-size: var(--font-size-lg); margin-bottom: var(--space-4);">
          {{ section.settings.eyebrow }}
        </p>
      {% endif %}

      <h2 class="heading-xl scroll-reveal">
        {{ section.settings.heading | default: "Pourquoi Nous Choisir" }}
      </h2>

      {% if section.settings.subheading %}
        <p class="scroll-reveal" style="color: var(--color-text-light); font-size: var(--font-size-lg);">
          {{ section.settings.subheading }}
        </p>
      {% endif %}
    </div>

    <!-- Features Grid -->
    <div class="grid-modern grid-3">
      {% for block in section.blocks %}
        <div class="glass-card scroll-reveal card-tilt" style="text-align: center;">
          <!-- Icon -->
          {% if block.settings.icon %}
            <div style="width: 80px; height: 80px; margin: 0 auto var(--space-6); background: var(--gradient-primary); border-radius: var(--radius-2xl); display: flex; align-items: center; justify-content: center; font-size: 2.5rem;">
              {{ block.settings.icon }}
            </div>
          {% endif %}

          <!-- Title -->
          <h3 class="heading-md" style="margin-bottom: var(--space-4);">
            {{ block.settings.title }}
          </h3>

          <!-- Description -->
          <p style="color: var(--color-text-light); line-height: 1.7;">
            {{ block.settings.description }}
          </p>

          <!-- Optional Link -->
          {% if block.settings.link_text %}
            <a href="{{ block.settings.link }}" style="display: inline-flex; align-items: center; gap: var(--space-2); color: var(--color-primary); font-weight: 600; margin-top: var(--space-4); text-decoration: none;">
              {{ block.settings.link_text }}
              <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

