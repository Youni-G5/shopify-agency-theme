{% comment %}
  Professional Features Section
{% endcomment %}

<section class="section-professional section-gray">
  <div class="container-professional">
    
    <!-- Section Header -->
    <div style="text-align: center; max-width: 800px; margin: 0 auto var(--space-20);">
      {% if section.settings.eyebrow %}
        <p class="text-uppercase scroll-reveal" style="color: var(--color-secondary); margin-bottom: var(--space-6);">
          {{ section.settings.eyebrow }}
        </p>
      {% endif %}

      <h2 class="heading-xl scroll-reveal" style="margin-bottom: var(--space-6);">
        {{ section.settings.heading | default: "Why Choose Us" }}
      </h2>

      <div class="section-divider scroll-reveal"></div>

      {% if section.settings.subheading %}
        <p class="text-lead scroll-reveal">
          {{ section.settings.subheading }}
        </p>
      {% endif %}
    </div>

    <!-- Features Grid -->
    <div class="grid-professional grid-3">
      {% for block in section.blocks %}
        <div class="card-professional scroll-reveal" style="text-align: center;">
          
          <!-- Icon Placeholder -->
          <div style="width: 60px; height: 60px; margin: 0 auto var(--space-6); background: linear-gradient(135deg, var(--color-primary), var(--color-primary-light)); border-radius: var(--radius-lg); display: flex; align-items: center; justify-content: center;">
            <svg width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
          </div>

          <!-- Title -->
          <h3 class="heading-md" style="margin-bottom: var(--space-4);">
            {{ block.settings.title }}
          </h3>

          <!-- Description -->
          <p style="color: var(--color-text-light); line-height: var(--line-height-relaxed);">
            {{ block.settings.description }}
          </p>

          <!-- Optional Link -->
          {% if block.settings.link_text != blank and block.settings.link != blank %}
            <a href="{{ block.settings.link }}" class="btn btn-text" style="margin-top: var(--space-4);">
              {{ block.settings.link_text }} â†’
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Features Professional",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow Text",
      "default": "Our Expertise"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Choose Us"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Proven expertise and dedication to delivering exceptional e-commerce solutions"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Performance Optimized"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Lightning-fast websites with PageSpeed scores above 90. Optimized for maximum conversions and user satisfaction."
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text (optional)"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Features Professional",
      "blocks": [
        {
