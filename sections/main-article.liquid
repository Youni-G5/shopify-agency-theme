<div class="section-modern">
  <div class="container-modern" style="max-width: 900px;">
    <article class="scroll-reveal">
      
      {% comment %} Article Header {% endcomment %}
      <header style="margin-bottom: var(--space-12); text-align: center;">
        <h1 class="heading-xl" style="margin-bottom: var(--space-6);">{{ article.title }}</h1>
        
        <div style="display: flex; justify-content: center; align-items: center; gap: var(--space-6); flex-wrap: wrap; color: var(--color-text-muted); font-size: var(--font-size-sm);">
          <span>üìÖ {{ article.published_at | date: '%d %B %Y' }}</span>
          {% if article.author != blank %}
            <span>‚úçÔ∏è {{ article.author }}</span>
          {% endif %}
          {% if article.tags.size > 0 %}
            <span>üè∑Ô∏è {{ article.tags | join: ', ' }}</span>
          {% endif %}
        </div>
      </header>

      {% comment %} Featured Image {% endcomment %}
      {% if article.image %}
        <img 
          src="{{ article.image | image_url: width: 1200 }}" 
          alt="{{ article.title }}"
          style="width: 100%; border-radius: var(--radius-2xl); margin-bottom: var(--space-12);"
        >
      {% endif %}

      {% comment %} Article Content {% endcomment %}
      <div class="article-content" style="line-height: 1.8; color: var(--color-text-light);">
        {{ article.content }}
      </div>

      {% comment %} Share Buttons {% endcomment %}
      <div style="margin-top: var(--space-12); padding-top: var(--space-8); border-top: 1px solid var(--glass-border); text-align: center;">
        <p style="margin-bottom: var(--space-4); font-weight: 600;">Partager cet article</p>
        <div style="display: flex; justify-content: center; gap: var(--space-3);">
          <a href="https://www.facebook.com/sharer.php?u={{ article.url | url_encode }}" target="_blank" class="btn-icon btn-glass hover-grow" aria-label="Partager sur Facebook">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href="https://twitter.com/share?url={{ article.url | url_encode }}&text={{ article.title | url_encode }}" target="_blank" class="btn-icon btn-glass hover-grow" aria-label="Partager sur Twitter">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
            </svg>
          </a>
          <a href="https://www.linkedin.com/shareArticle?url={{ article.url | url_encode }}" target="_blank" class="btn-icon btn-glass hover-grow" aria-label="Partager sur LinkedIn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </div>

      {% comment %} Back to Blog {% endcomment %}
      <div style="text-align: center; margin-top: var(--space-12);">
        <a href="{{ blog.url }}" class="btn btn-secondary">‚Üê Retour au blog</a>
      </div>
    </article>
  </div>
</div>

<style>
  .article-content h2 {
    margin-top: var(--space-12);
    margin-bottom: var(--space-6);
    font-size: var(--font-size-3xl);
  }
  
  .article-content h3 {
    margin-top: var(--space-8);
    margin-bottom: var(--space-4);
    font-size: var(--font-size-2xl);
  }
  
  .article-content p {
    margin-bottom: var(--space-6);
  }
  
  .article-content ul, .article-content ol {
    margin-bottom: var(--space-6);
    padding-left: var(--space-8);
  }
  
  .article-content li {
    margin-bottom: var(--space-3);
  }
  
  .article-content img {
    border-radius: var(--radius-xl);
    margin: var(--space-8) 0;
  }
  
  .article-content blockquote {
    border-left: 4px solid var(--color-primary);
    padding-left: var(--space-6);
    margin: var(--space-8) 0;
    font-style: italic;
    color: var(--color-text-muted);
  }
</style>

{% schema %}
{
  "name": "Article",
  "settings": []
}
{% endschema %}
