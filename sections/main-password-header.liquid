<div class="glass-card" style="max-width: 500px; margin: 0 auto; text-align: center;">
  {% if shop.password_message != blank %}
    <p style="margin-bottom: var(--space-6); color: var(--color-text-light);">{{ shop.password_message }}</p>
  {% endif %}

  <h1 class="heading-xl" style="margin-bottom: var(--space-8);">{{ shop.name }}</h1>

  {% form 'storefront_password' %}
    {% if form.errors %}
      <div style="background: var(--color-error); color: white; padding: var(--space-4); border-radius: var(--radius-lg); margin-bottom: var(--space-6);">
        {{ form.errors | default_errors }}
      </div>
    {% endif %}

    <div style="margin-bottom: var(--space-6);">
      <input 
        type="password" 
        name="password" 
        placeholder="Mot de passe"
        autofocus
        style="width: 100%; padding: var(--space-4); border: 2px solid var(--glass-border); border-radius: var(--radius-lg); font-size: var(--font-size-base);"
      >
    </div>

    <button type="submit" class="btn btn-primary" style="width: 100%;">
      Entrer
    </button>
  {% endform %}
</div>

{% schema %}
{
  "name": "Password Header",
  "settings": []
}
{% endschema %}
