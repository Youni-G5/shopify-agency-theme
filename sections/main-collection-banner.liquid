<div class="hero-modern" style="min-height: 40vh;">
  <div class="hero-content">
    <h1 class="heading-display">{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <p style="font-size: var(--font-size-xl); color: var(--color-text-light); max-width: 700px; margin: 0 auto;">
        {{ collection.description }}
      </p>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Collection Banner",
  "settings": []
}
{% endschema %}
