<section class="stats-section section" data-section-id="{{ section.id }}" {% if section.settings.background_color == 'light' %}style="background-color: #f9fafb;"{% endif %}>
  <div class="container">
    {% if section.settings.heading != blank %}
      <h2 class="heading-lg text-center fade-in-up">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="grid grid-cols-1 grid-cols-2 grid-cols-4" style="margin-top: 3rem;">
      {% for block in section.blocks %}
        <div class="stat-item fade-in-up" {{ block.shopify_attributes }} style="text-align: center;">
          <div class="stat-number" style="font-size: clamp(2.5rem, 5vw, 3.5rem); font-weight: 700; color: var(--color-primary); margin-bottom: 0.5rem;">
            {{ block.settings.number }}
          </div>
          <div class="stat-label" style="font-size: 1.1rem; color: #6b7280; font-weight: 500;">
            {{ block.settings.label }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Stats Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "En Chiffres"
    },
    {
      "type": "select",
      "id": "background_color",
      "label": "Background Color",
      "options": [
        { "value": "white", "label": "White" },
        { "value": "light", "label": "Light Gray" }
      ],
      "default": "white"
    }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Stat",
      "settings": [
        {
          "type": "text",
          "id": "number",
          "label": "Number",
          "default": "100+"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Projets Réalisés"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Stats Section",
      "blocks": [
        {
          "type": "stat",
          "settings": {
            "number": "50+",
            "label": "Projets Réalisés"
          }
        },
        {
          "type": "stat",
          "settings": {
            "number": "5+",
            "label": "Années d'Expérience"
          }
        },
        {
          "type": "stat",
          "settings": {
            "number": "100%",
            "label": "Clients Satisfaits"
          }
        },
        {
          "type": "stat",
          "settings": {
            "number": "24/7",
            "label": "Support Disponible"
          }
        }
      ]
    }
  ]
}
{% endschema %}
