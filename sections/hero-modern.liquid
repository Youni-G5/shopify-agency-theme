{% comment %}
  Professional Hero Section - Corporate & Elegant
{% endcomment %}

<section class="hero-professional">
  <div class="container-professional">
    <div style="max-width: 900px;">
      
      {% if section.settings.eyebrow %}
        <p class="text-uppercase scroll-reveal" style="color: var(--color-secondary); margin-bottom: var(--space-6);">
          {{ section.settings.eyebrow }}
        </p>
      {% endif %}

      <h1 class="heading-display scroll-reveal" style="margin-bottom: var(--space-6);">
        {{ section.settings.heading | default: "Excellence in E-Commerce Solutions" }}
      </h1>

      {% if section.settings.subheading %}
        <p class="text-lead scroll-reveal" style="margin-bottom: var(--space-12); max-width: 700px;">
          {{ section.settings.subheading }}
        </p>
      {% endif %}

      <!-- CTA Buttons -->
      <div class="scroll-reveal" style="display: flex; gap: var(--space-4); flex-wrap: wrap;">
        {% if section.settings.primary_button_text != blank and section.settings.primary_button_link != blank %}
          <a href="{{ section.settings.primary_button_link }}" class="btn btn-primary btn-lg">
            {{ section.settings.primary_button_text }}
          </a>
        {% endif %}

        {% if section.settings.secondary_button_text != blank and section.settings.secondary_button_link != blank %}
          <a href="{{ section.settings.secondary_button_link }}" class="btn btn-secondary btn-lg">
            {{ section.settings.secondary_button_text }}
          </a>
        {% endif %}
      </div>

      <!-- Stats -->
      {% if section.settings.show_stats %}
        <div class="scroll-reveal" style="margin-top: var(--space-20); display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: var(--space-8); max-width: 600px;">
          <div style="border-left: 3px solid var(--color-secondary); padding-left: var(--space-4);">
            <div class="heading-lg" style="color: var(--color-primary); margin-bottom: var(--space-2);">{{ section.settings.stat_1_number }}+</div>
            <p style="color: var(--color-text-muted); font-size: var(--font-size-sm); text-transform: uppercase; letter-spacing: var(--letter-spacing-wide);">{{ section.settings.stat_1_label }}</p>
          </div>
          <div style="border-left: 3px solid var(--color-secondary); padding-left: var(--space-4);">
            <div class="heading-lg" style="color: var(--color-primary); margin-bottom: var(--space-2);">{{ section.settings.stat_2_number }}%</div>
            <p style="color: var(--color-text-muted); font-size: var(--font-size-sm); text-transform: uppercase; letter-spacing: var(--letter-spacing-wide);">{{ section.settings.stat_2_label }}</p>
          </div>
          <div style="border-left: 3px solid var(--color-secondary); padding-left: var(--space-4);">
            <div class="heading-lg" style="color: var(--color-primary); margin-bottom: var(--space-2);">{{ section.settings.stat_3_number }}h</div>
            <p style="color: var(--color-text-muted); font-size: var(--font-size-sm); text-transform: uppercase; letter-spacing: var(--letter-spacing-wide);">{{ section.settings.stat_3_label }}</p>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Professional",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow Text",
      "default": "Premium Shopify Agency"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "Excellence in E-Commerce Solutions"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "We create high-performance Shopify stores that deliver exceptional user experiences and drive measurable business results."
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary Button Text",
      "default": "View Our Work"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "Get in Touch"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link"
    },
    {
      "type": "checkbox",
      "id": "show_stats",
      "label": "Show Statistics",
      "default": true
    },
    {
      "type": "number",
      "id": "stat_1_number",
      "label": "Stat 1 Number",
      "default": 50
    },
    {
      "type": "text",
      "id": "stat_1_label",
      "label": "Stat 1 Label",
      "default": "Projects Delivered"
    },
    {
      "type": "number",
      "id": "stat_2_number",
      "label": "Stat 2 Number",
      "default": 98
    },
    {
      "type": "text",
      "id": "stat_2_label",
      "label": "Stat 2 Label",
      "default": "Client Satisfaction"
    },
    {
      "type": "number",
      "id": "stat_3_number",
      "label": "Stat 3 Number",
      "default": 24
    },
    {
      "type": "text",
      "id": "stat_3_label",
      "label": "Stat 3 Label",
      "default": "Support Available"
    }
  ],
  "presets": [
    {
      "name": "Hero Professional"
    }
  ]
}
{% endschema %}
