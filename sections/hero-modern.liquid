{% comment %}
  Hero Section - Modern with Floating Shapes & Gradient Mesh
{% endcomment %}

<section class="hero-modern" id="hero-particles">
  <!-- Floating Background Shapes -->
  <div class="hero-floating-shapes">
    <div class="floating-shape shape-1"></div>
    <div class="floating-shape shape-2"></div>
    <div class="floating-shape shape-3"></div>
  </div>

  <!-- Hero Content -->
  <div class="hero-content">
    {% if section.settings.eyebrow %}
      <p class="scroll-reveal" style="color: var(--color-primary); font-weight: 600; font-size: var(--font-size-lg); margin-bottom: var(--space-4);">
        {{ section.settings.eyebrow }}
      </p>
    {% endif %}

    <h1 class="heading-display scroll-reveal">
      {{ section.settings.heading | default: "CrÃ©ons Ensemble Votre <span class='text-gradient-vivid'>Boutique de RÃªve</span>" }}
    </h1>

    {% if section.settings.subheading %}
      <p class="scroll-reveal" style="font-size: var(--font-size-xl); color: var(--color-text-light); max-width: 700px; margin: 0 auto var(--space-10);">
        {{ section.settings.subheading }}
      </p>
    {% endif %}

    <!-- CTA Buttons -->
    <div class="scroll-reveal" style="display: flex; gap: var(--space-4); justify-content: center; flex-wrap: wrap;">
      {% if section.settings.primary_button_text != blank and section.settings.primary_button_link != blank %}
        <a href="{{ section.settings.primary_button_link }}" class="btn btn-primary magnetic">
          {{ section.settings.primary_button_text }}
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      {% endif %}

      {% if section.settings.secondary_button_text != blank and section.settings.secondary_button_link != blank %}
        <a href="{{ section.settings.secondary_button_link }}" class="btn btn-glass magnetic">
          {{ section.settings.secondary_button_text }}
        </a>
      {% endif %}
    </div>

    <!-- Stats -->
    {% if section.settings.show_stats %}
      <div class="scroll-scale" style="margin-top: var(--space-16); display: flex; gap: var(--space-12); justify-content: center; flex-wrap: wrap;">
        <div style="text-align: center;">
          <div class="heading-md" data-count="{{ section.settings.stat_1_number }}">0</div>
          <p style="color: var(--color-text-light);">{{ section.settings.stat_1_label }}</p>
        </div>
        <div style="text-align: center;">
          <div class="heading-md" data-count="{{ section.settings.stat_2_number }}">0</div>
          <p style="color: var(--color-text-light);">{{ section.settings.stat_2_label }}</p>
        </div>
        <div style="text-align: center;">
          <div class="heading-md" data-count="{{ section.settings.stat_3_number }}">0</div>
          <p style="color: var(--color-text-light);">{{ section.settings.stat_3_label }}</p>
        </div>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .hero-modern {
    position: relative;
    overflow: hidden;
  }
  
  .hero-content {
    position: relative;
    z-index: 10;
  }
</style>

