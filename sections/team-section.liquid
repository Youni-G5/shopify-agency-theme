<section class="team-section section" data-section-id="{{ section.id }}">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h2 class="heading-lg text-center fade-in-up">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <p class="text-center text-muted fade-in-up" style="max-width: 600px; margin: 0 auto 3rem; font-size: 1.1rem;">
        {{ section.settings.subheading }}
      </p>
    {% endif %}

    <div class="grid grid-cols-1 grid-cols-2 grid-cols-3">
      {% for block in section.blocks %}
        <div class="team-member card fade-in-up" {{ block.shopify_attributes }} style="text-align: center;">
          {% if block.settings.image != blank %}
            <div style="width: 150px; height: 150px; margin: 0 auto 1.5rem; border-radius: 50%; overflow: hidden; border: 4px solid var(--color-primary);">
              {{ block.settings.image | image_url: width: 300 | image_tag:
                loading: 'lazy',
                alt: block.settings.name,
                style: 'width: 100%; height: 100%; object-fit: cover;'
              }}
            </div>
          {% else %}
            <div style="width: 150px; height: 150px; margin: 0 auto 1.5rem; border-radius: 50%; background: linear-gradient(135deg, var(--color-primary), var(--color-secondary)); display: flex; align-items: center; justify-content: center; color: white; font-size: 3rem; font-weight: bold;">
              {{ block.settings.name | slice: 0 }}
            </div>
          {% endif %}

          <div class="card-content">
            <h3 class="heading-md" style="margin-bottom: 0.25rem;">{{ block.settings.name }}</h3>
            <p style="color: var(--color-primary); font-weight: 600; margin-bottom: 1rem;">{{ block.settings.role }}</p>
            <p class="text-muted">{{ block.settings.bio }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Team Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Notre Équipe"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Rencontrez les experts qui travailleront sur vos projets"
    }
  ],
  "blocks": [
    {
      "type": "member",
      "name": "Team Member",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Photo"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "John Doe"
        },
        {
          "type": "text",
          "id": "role",
          "label": "Role",
          "default": "Lead Developer"
        },
        {
          "type": "textarea",
          "id": "bio",
          "label": "Bio",
          "default": "Passionné par le développement Shopify depuis plus de 5 ans"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Team Section"
    }
  ]
}
{% endschema %}
