{% if cart.item_count > 0 %}
  <div class="section-modern" style="background: var(--color-bg-alt); padding: var(--space-12) 0;">
    <div class="container-modern" style="max-width: 600px;">
      <div class="glass-card">
        <div style="display: flex; justify-content: space-between; margin-bottom: var(--space-6); padding-bottom: var(--space-6); border-bottom: 1px solid var(--glass-border);">
          <span style="font-size: var(--font-size-lg);">Sous-total</span>
          <span style="font-size: var(--font-size-lg); font-weight: 700;">{{ cart.total_price | money }}</span>
        </div>

        <p style="font-size: var(--font-size-sm); color: var(--color-text-muted); margin-bottom: var(--space-6); text-align: center;">
          Les frais de livraison seront calculés à l'étape suivante
        </p>

        <a href="/checkout" class="btn btn-primary magnetic" style="width: 100%; padding: var(--space-5) var(--space-8);">Passer la commande</a>
        
        <a href="/collections/all" style="display: block; text-align: center; margin-top: var(--space-4); color: var(--color-text-muted); text-decoration: none;">
          ← Continuer mes achats
        </a>
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Cart Footer",
  "settings": []
}
{% endschema %}
