<section class="portfolio-section section" data-section-id="{{ section.id }}" id="portfolio" style="background-color: #f9fafb;">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h2 class="heading-lg text-center fade-in-up">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <p class="text-center text-muted fade-in-up" style="max-width: 600px; margin: 0 auto 3rem; font-size: 1.1rem;">
        {{ section.settings.subheading }}
      </p>
    {% endif %}

    <div class="grid grid-cols-1 grid-cols-2 grid-cols-3">
      {% for block in section.blocks %}
        <div class="portfolio-item card fade-in-up" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            <div class="card-image-wrapper" style="overflow: hidden; border-radius: 12px 12px 0 0;">
              {{ block.settings.image | image_url: width: 600 | image_tag:
                loading: 'lazy',
                class: 'card-image',
                alt: block.settings.title
              }}
            </div>
          {% else %}
            <div class="card-image-wrapper" style="overflow: hidden; border-radius: 12px 12px 0 0; background: linear-gradient(135deg, var(--color-primary), var(--color-secondary)); height: 250px;">
            </div>
          {% endif %}

          <div class="card-content">
            <h3 class="heading-md" style="margin-bottom: 0.5rem;">{{ block.settings.title }}</h3>
            
            {% if block.settings.category != blank %}
              <p style="color: var(--color-primary); font-weight: 600; font-size: 0.9rem; margin-bottom: 0.75rem;">
                {{ block.settings.category }}
              </p>
            {% endif %}

            <p class="text-muted">{{ block.settings.description }}</p>

            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="btn btn-secondary" style="margin-top: 1rem;">
                Voir le projet
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>

    {% if section.settings.show_view_all %}
      <div class="text-center" style="margin-top: 3rem;">
        <a href="{{ section.settings.view_all_link }}" class="btn btn-primary">
          {{ section.settings.view_all_text }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Portfolio Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Work"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Check out our recent projects"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show View All Button",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View All Button Text",
      "default": "View All Projects"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "View All Link"
    }
  ],
  "blocks": [
    {
      "type": "project",
      "name": "Project",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Project Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Project Title",
          "default": "Project Name"
        },
        {
          "type": "text",
          "id": "category",
          "label": "Category",
          "default": "E-commerce"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Brief project description"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Project Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Portfolio Grid"
    }
  ]
}
{% endschema %}
