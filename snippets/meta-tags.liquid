{% comment %}
  SEO Meta Tags
  Generates Open Graph and Twitter Card meta tags
{% endcomment %}

{% liquid
  assign og_title = page_title | default: shop.name
  assign og_description = page_description | default: shop.description
  assign og_url = canonical_url
  assign og_type = 'website'
  assign og_image = settings.logo | default: '' | image_url: width: 1200
%}

{%- if template == 'product' -%}
  {% liquid
    assign og_title = product.title | append: ' - ' | append: shop.name
    assign og_description = product.description | strip_html | truncatewords: 30
    assign og_type = 'product'
    
    if product.featured_image
      assign og_image = product.featured_image | image_url: width: 1200
    endif
  %}
{%- elsif template == 'article' -%}
  {% liquid
    assign og_title = article.title | append: ' - ' | append: shop.name
    assign og_description = article.excerpt_or_content | strip_html | truncatewords: 30
    assign og_type = 'article'
    
    if article.image
      assign og_image = article.image | image_url: width: 1200
    endif
  %}
{%- endif -%}

<!-- Open Graph / Facebook -->
<meta property="og:type" content="{{ og_type }}">
<meta property="og:url" content="{{ og_url }}">
<meta property="og:title" content="{{ og_title }}">
<meta property="og:description" content="{{ og_description }}">
{%- if og_image != blank -%}
  <meta property="og:image" content="{{ og_image }}">
  <meta property="og:image:secure_url" content="{{ og_image }}">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
{%- endif -%}
<meta property="og:site_name" content="{{ shop.name }}">

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:url" content="{{ og_url }}">
<meta name="twitter:title" content="{{ og_title }}">
<meta name="twitter:description" content="{{ og_description }}">
{%- if og_image != blank -%}
  <meta name="twitter:image" content="{{ og_image }}">
{%- endif -%}

{%- if template == 'product' -%}
  <meta property="product:price:amount" content="{{ product.price | money_without_currency }}">
  <meta property="product:price:currency" content="{{ cart.currency.iso_code }}">
{%- endif -%}
